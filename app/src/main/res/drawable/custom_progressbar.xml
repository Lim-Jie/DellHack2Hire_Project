<!-- custom_progressbar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/black" /> <!-- Background color -->
            <corners android:radius="5dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#26A3FF" /> <!-- Progress color -->
                <corners android:radius="5dp" /> <!-- Adjust corner radius as needed -->
            </shape>
        </clip>
    </item>
</layer-list>
